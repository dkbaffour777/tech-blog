<article class="post">
  <div class="title">
    <h2>{{title}}</h2>
  </div>
  <div class="content">
    <p>{{content}}</p>
  </div>
  <div class="meta">
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    <span style="margin-left: 20px; font-size: small;">Posted by {{user.username}} on {{format_date created_at}}</span>
  </div>
</article>