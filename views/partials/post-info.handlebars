<a href="/post/{{id}}" class="post row my-2 p-3"  style="border-bottom: 1px solid #eee; ">
  <div class="title">
    <h2 class="fs-4 fw-2">{{title}}</h2>
  </div>
  <div class="content">
    <p>{{content}}</p>
  </div>
  <div class="meta">
    <span>{{comments.length}} {{format_plural "comment" comments.length}}</span>
    <span style="margin-left: 20px; font-size: small;">Posted by {{user.username}} on {{format_date created_at}}</span>
  </div>
</a>